<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".membros">

    <TextView
        android:id="@+id/titlecentral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/robotobold"
        android:textColor="#8492A6"
        android:text="Cadastre-se para receber oportunidades de emprego de acordo com seu perfil"
        android:gravity="center"
        android:textSize="20dp"
        />

    <RelativeLayout
        android:layout_below="@id/titlecentral"
        android:id="@+id/quadlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quadbox"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <GridLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:text="Nome Completo:*"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edit_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="2"
                android:ems="17"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:text=""
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:maxLength="40"
                android:hint="Nome Completo"
                />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="230dp"
                android:layout_columnSpan="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="3"
                android:text="CPF:*"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edit_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="4"
                android:ems="7"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:digits="0123456789Xx"
                android:maxLength="11"
                android:hint="CPF"
                android:text="" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="3"
                android:text="RG:*"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edit_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_column="0"
                android:layout_row="4"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:digits="0123456789"
                android:maxLength="9"
                android:hint="RG"
                android:text="" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="5"
                android:text="Data de Nascimento:*"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edit_nascimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_column="0"
                android:layout_row="6"
                android:ems="7"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:hint="dd/mm/aaaa"
                android:maxLength="10"
                android:digits="0123456789/"
                android:text="" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="5"
                android:text="Data de Nascimento:*"
                android:textSize="20dp"
                />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="7"
                android:text="Nível de Escolaridade:*"
                android:textSize="20dp"
                />

            <Spinner
                android:id="@+id/edit_escolaridade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="8"
                android:ems="10"
                android:inputType="textPersonName"
                android:entries="@array/escolaridade" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="10"
                android:text="Gênero:"
                android:textSize="19dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_marginLeft="70dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/grupogenero"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/masculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Masculino"></RadioButton>

                    <RadioButton
                        android:id="@+id/feminino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feminino"></RadioButton>

                    <RadioButton
                        android:id="@+id/naoidentificado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Não Identificar "></RadioButton>

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="11"
                android:text="Email: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="12"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:hint="nome@email.com"
                android:maxLength="40"
                android:text="" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="13"
                android:text="Telefone: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="14"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:hint="(xx)xxxx-xxxx"
                android:maxLength="10"
                android:digits="0123456789"
                android:text="" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="230dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="13"
                android:text="Celular: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="14"
                android:ems="7"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:hint="(xx)xxxx-xxxx"
                android:maxLength="11"
                android:digits="0123456789"
                android:text="" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="15"
                android:text="Endereço: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_endereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="16"
                android:ems="17"
                android:inputType="textPersonName"
                android:background="@drawable/textbox"
                android:hint="Endereco"
                android:maxLength="40"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="18"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/latoregular"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#47525E"
                    android:text="Número: "
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="@font/latoregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#47525E"
                    android:text="Complemento: "
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="@font/latoregular"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#47525E"
                    android:text="Cep: "
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="19"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_numero"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:inputType="textPersonName"
                    android:background="@drawable/textbox"
                    android:hint="Número"
                    android:maxLength="5"
                    android:digits="0123456789"
                    android:text="" />

                <EditText
                    android:id="@+id/edit_complemento"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:inputType="textPersonName"
                    android:background="@drawable/textbox"
                    android:hint="Complemento"
                    android:maxLength="20"
                    android:text="" />

                <EditText
                    android:id="@+id/edit_cep"
                    android:layout_marginLeft="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:inputType="textPersonName"
                    android:background="@drawable/textbox"
                    android:hint="CEP"
                    android:maxLength="8"
                    android:digits="0123456789"
                    android:text="" />
            </LinearLayout>

            <Spinner
                android:id="@+id/edit_renda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="21"
                android:layout_column="0"
                android:layout_marginTop="7dp"
                android:entries="@array/renda"
                android:fontFamily="@font/latoregular" />

            <TextView
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:layout_column="0"
                android:layout_row="22"
                android:text="Quantas pessoas moram com você ?"
                android:textSize="19dp"
                />

            <RadioGroup
                android:id="@+id/grupopessoas"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_row="23"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/grupo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1-3 ">

                </RadioButton>

                <RadioButton
                    android:id="@+id/grupo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4-6 ">

                </RadioButton>

                <RadioButton
                    android:id="@+id/grupo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7+ ">

                </RadioButton>

            </RadioGroup>


        </GridLayout>
    </RelativeLayout>

    <Button
        android:fontFamily="@font/latoregular"
        android:background="#6B7077"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/quadlayout"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Cadastrar "
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button"
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textview"
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>