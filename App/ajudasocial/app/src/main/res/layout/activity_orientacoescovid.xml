<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    tools:context=".orientacoescovid">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bauhaus93"
        android:textColor="#E3BF0F35"
        android:text="Orientações Covid - 19"
        android:textSize="50sp"
        android:gravity="center"
        android:drawableRight="@mipmap/covid"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/maos"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@mipmap/maos"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/maos"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Lave as mãos com água e sabão ou use álcool em gel"
        />

    <TextView
        android:layout_below="@id/maos"
        android:id="@+id/tossir"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@mipmap/tossir"
        />

    <TextView
        android:layout_below="@id/maos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/tossir"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Cubra o nariz e boca ao espirrar ou tossir."
        />

    <TextView
        android:layout_below="@id/tossir"
        android:id="@+id/aglomeracoes"
        android:layout_marginTop="20dp"
        android:layout_width="125dp"
        android:layout_height="120dp"
        android:background="@mipmap/aglomeracoes"
        />

    <TextView
        android:layout_below="@id/tossir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/aglomeracoes"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Evite aglomerações, principalmente se estiver doente."
        />

    <TextView
        android:layout_below="@id/aglomeracoes"
        android:id="@+id/ambientes"
        android:layout_marginTop="20dp"
        android:layout_width="125dp"
        android:layout_height="120dp"
        android:background="@mipmap/ambientes"
        />

    <TextView
        android:layout_below="@id/aglomeracoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@id/aglomeracoes"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Mantenha os ambientes bem ventilados."
        />

        <TextView
            android:layout_below="@id/ambientes"
            android:id="@+id/objetos"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="125dp"
            android:layout_height="120dp"
            android:background="@mipmap/objetos"
            />

        <TextView
            android:layout_below="@id/ambientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@id/aglomeracoes"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Não compartilhe objetos pessoais."
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Faça uma Avaliação Online"
            android:onClick="opentestcovid"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/objetos"
            />

    </RelativeLayout>

    </ScrollView>


</LinearLayout>